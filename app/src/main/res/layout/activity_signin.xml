<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin">
    <ImageView
        android:id="@+id/imageViewww"
        android:layout_width="133dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/img"
        />

    <TextView
        android:id="@+id/textViewww"
        android:layout_width="278dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="LOGIN"
        android:textColor="#074DFF"
        android:textSize="48sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="344dp"
        android:layout_height="55dp"
        android:layout_marginBottom="364dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#30373C"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER YOUR EMAIL"
        android:inputType="textEmailAddress"

        android:textColor="#E8DCDC"
        android:textColorHint="#CCD3CB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.187" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="349dp"
        android:layout_height="53dp"

        android:layout_marginBottom="264dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#2B1F1F"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER PASSWORD"
        android:inputType="textPassword"
        android:textColor="#ECEFEA"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.177"
        app:passwordToggleEnabled="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:background="@drawable/img_2"
        android:text="LOGIN"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintVertical_bias="0.368" />

    <ProgressBar
        android:id="@+id/plogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="222dp"
        android:layout_height="33dp"
        android:text="FORGET PASSWORD?"
        android:textColor="#FDFBFB"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

</androidx.constraintlayout.widget.ConstraintLayout>