<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/img_7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_7"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/task_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#51673AB7"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="ENTER TASK"
                android:textColor="#F83B00"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#453F51B5"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/img_12" />

            <TextView
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#453F51B5"
                android:gravity="center_vertical"
                android:text="15-01-2022"
                android:textColor="#250B0B"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_layout"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#453F51B5"
                android:gravity="center_vertical"
                android:text="22:10"
                android:textColor="#250B0B"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_layout"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="EDIT "
                android:textColor="#F4EFEF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delete_layout"
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="DELETE"
                android:textColor="#F4EFEF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>